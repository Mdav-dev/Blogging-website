  <style>
    .list-container{
      display: flex;
      justify-content: center;
      align-items: flex-start;
      padding: 50px;
      
    }
    ul{
      list-style: none;
    }
    #postsList{
      display: grid;
    }
    .list{
      background-color: white;
      padding: 8px;
      border-radius: 5%;
      width: 25%;
      height: 100px;
      cursor: pointer;
    }

  </style>
</head>
<%-include('header.ejs') %>
<body>
  <% var id = 0 %>
  <div class="list-container">
    <ul id="postsList" >
      <% posts.forEach(post=> { 
        id = post.id
        // $(document).ready(function() {
